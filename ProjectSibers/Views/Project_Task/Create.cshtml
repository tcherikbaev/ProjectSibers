@model ProjectSibers.Models.Project_Task

@{
    ViewData["Title"] = "Create";
}

<h1>Создать новую запись</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProjectID" class="control-label"></label>
                <select asp-for="ProjectID" class ="form-control" asp-items="ViewBag.ProjectID"></select>
            </div>
            <div class="form-group">
                <label asp-for="TaskID" class="control-label"></label>
                <select asp-for="TaskID" class ="form-control" asp-items="ViewBag.TaskID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Cоздать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Bозврат к общему списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
