@model IEnumerable<ProjectSibers.Models.Employee>

@{
    ViewData["Title"] = "Index";
}
    <h1>Сотрудники</h1>

<p>
    <a asp-action="Create">Добавить новую запись</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patronymic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doljnost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patronymic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doljnost.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmployeeID">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.EmployeeID">Данные о</a> |
                <a asp-action="Delete" asp-route-id="@item.EmployeeID">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
