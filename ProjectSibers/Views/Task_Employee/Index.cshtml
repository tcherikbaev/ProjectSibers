@model IEnumerable<ProjectSibers.Models.Task_Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Задача_Сотрудник</h1>

<p>
    <a asp-action="Create">Добавить новую запись</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Task)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Task.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Te_ID">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.Te_ID">Данные о</a> |
                <a asp-action="Delete" asp-route-id="@item.Te_ID">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
